<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- default -->
    <item
        android:state_pressed="false"
        android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/color3"
                android:centerColor="@color/color3"
                android:endColor="@color/color3"
                android:angle="0" />
            <corners android:radius="5dp" />
            <stroke android:width="2px"
                android:color="@color/color3" />
        </shape>
    </item>


    <!-- button pressed -->
    <item
        android:state_pressed="true"
        android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/color6"
                android:centerColor="@color/color6"
                android:endColor="@color/color6"
                android:angle="0" />
            <corners android:radius="5dp" />
            <stroke android:width="2px"
                android:color="@color/color6" />
        </shape>
    </item>
</selector>



